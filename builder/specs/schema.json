{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "idea", "scope"],
  "properties": {
    "version": { "type": "string" },
    "idea": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": { "type": "string" },
        "one_liner": { "type": "string" },
        "problem": { "type": "string" }
      },
      "additionalProperties": true
    },
    "scope": {
      "type": "object",
      "properties": {
        "must_features": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
