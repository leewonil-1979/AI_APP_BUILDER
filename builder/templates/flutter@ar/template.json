{
  "name": "Flutter AR Template",
  "version": "1.0.0",
  "description": "AR 기능이 포함된 Flutter 앱 템플릿",
  "author": "AI_APP_BUILDER",
  "features": {
    "ar": true,
    "camera": true,
    "3d_models": true,
    "object_tracking": true,
    "plane_detection": true,
    "stateManagement": "riverpod",
    "navigation": "goRouter"
  },
  "structure": {
    "lib/": {
      "main.dart": "앱 진입점",
      "app.dart": "앱 설정 및 라우팅",
      "core/": {
        "constants/": "상수 정의",
        "theme/": "테마 설정",
        "utils/": "유틸리티 함수",
        "services/": "공통 서비스"
      },
      "features/": {
        "ar/": {
          "data/": "AR 데이터 레이어",
          "domain/": "AR 비즈니스 로직",
          "presentation/": "AR UI 레이어"
        },
        "home/": {
          "presentation/": "홈 화면"
        }
      },
      "shared/": {
        "widgets/": "공통 위젯",
        "models/": "3D 모델",
        "ar_widgets/": "AR 전용 위젯"
      }
    },
    "assets/": {
      "models/": "3D 모델 파일 (.glb, .gltf)",
      "textures/": "텍스처 파일",
      "sounds/": "사운드 파일"
    }
  },
  "dependencies": {
    "flutter_riverpod": "^2.4.9",
    "go_router": "^12.1.3",
    "ar_flutter_plugin": "^0.7.3",
    "vector_math": "^2.1.4",
    "camera": "^0.11.0+2",
    "permission_handler": "^11.1.0"
  },
  "dev_dependencies": {
    "flutter_test": "sdk",
    "flutter_lints": "^3.0.0"
  },
  "platforms": {
    "android": {
      "minSdk": 24,
      "targetSdk": 34,
      "permissions": ["android.permission.CAMERA", "android.permission.WRITE_EXTERNAL_STORAGE"]
    },
    "ios": {
      "minVersion": "12.0",
      "permissions": {
        "NSCameraUsageDescription": "This app uses camera for AR functionality."
      }
    }
  }
}
